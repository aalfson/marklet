<div id='markletSubmitFormOverlay' style='position: fixed; z-index: 7777777; left: 0; top: 0; width: 100%; height: 100%; margin: 0; padding: 100px 0 0 0; background-image:url(http://localhost:3000/form_background.png); color: #fff; font-family: Helvetica, Arial, sans-serif; font-weight: bold; line-height: 1.0; letter-spacing: normal;  text-align: center; font-variant: normal; font-style: normal;'>
	<form id='markletSubmitForm' >
	    <div style='font-size: 30px;'>Marklet<div>
	    <label for='markletPageTitle' style='font-size: 20px;'>Title:</label>
	    <input id='markletPageTitle' type='text'/><br/>
	    <label for='markletCategory'  style='font-size: 20px;'>Category:</label>
	    <select id='markletCategory'>
			<% @categories.each do |c|%>
				<option value='<%= c.name %>'><%= c.name %></option>
			<% end %>
		</select><br/>
		<div>
			<input id='markletFormSubmit' type='submit' value='Submit'/>&nbsp;<input id='markletFormCancel' type='button' value='Cancel' id='markletCancel'/>
		</div>
	</form>
</div>
