<div id='markletSubmitFormOverlay' style='position: fixed; z-index: 7777777; left: 0; top: 0; width: 100%; height: 100%; margin: 0; padding: 100px 0 0 0; background-image:url(http://localhost:3000/form_background.png); color: #fff; font-family: Helvetica, Arial, sans-serif; font-weight: bold; line-height: 1.0; letter-spacing: normal;  text-align: center; font-variant: normal; font-style: normal;'>
	<form id='markletSubmitForm'>
	    <div style='font-size: 30px;'>Submit to Marklet<div>
		<table style='margin: 5px auto 0 auto; width: 400px;border: 0px; color: #fff; font-family: Helvetica, Arial, sans-serif; line-height: 1.0; letter-spacing: normal;'>
			<tr>
				<td style='vertical-align:middle;'><div style='font-size: 20px; color: #ffffff; text-align: left;'>Title:&nbsp;</div></td>
				<td><input id='markletPageTitle' type='text' placeholder='<%= @title %>'/ style='font-family: Helvetica, Arial, sans-serif; height: 20px; width: 98%; font-size: 15px;'></div></td>
			</tr>
			<tr>
				<td style='vertical-align:middle;'><div style='font-size: 20px; color: #ffffff; text-align: left;'>Category:&nbsp;</div></td>
				<td>
					<select id='markletCategory' style='width: 100%'>
					<% @categories.each do |c|%>
						<option value='<%= c.id %>'><%= c.name %></option>
					<% end %>
					</select>
				</td>
			</tr>
		</table>	
		<div>
			<input id='markletFormSubmit' type='submit' value='Submit'/>&nbsp;<input id='markletFormCancel' type='button' value='Cancel' id='markletCancel'/>
		</div>
	</form>
</div>
