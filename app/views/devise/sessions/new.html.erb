<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :class => 'formLabel' %><br />
  <%= f.email_field :email %></div>

  <div id='registrationPassword'><%= f.label :password, :class => 'formLabel' %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
  <div id='registrationPassword'><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div id='registrationPassword'><%= f.submit "Sign in" %></div>
<% end %>
<div id='registrationPassword'>
	<%= render "devise/shared/links" %>
</div>