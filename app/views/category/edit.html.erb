<h2>Edit <%= @category.name %></h2>
<br/>
<%= form_tag("/c/update", method: "post") do %>
	<%= hidden_field_tag(:original_name, @category.name) %>
	
	<%= label_tag(:name, "Name:") %>
	<%= text_field_tag(:name, @category.name, {:class => "input-xxlarge", placeholder: "Category name..." }) %><br/>

  	<%= label_tag(:description, "Description:") %>
	<%= text_area_tag(:description, @category.description , {rows: 3, :class => "input-xxlarge", placeholder: "Category description..."}) %><br/>

	<%= label_tag(:moderator, "Moderator:") %>
	<%= select_tag(:moderator, options_from_collection_for_select(@users, "id", "name", @moderator.id)) %>
	<br/>
	<%= submit_tag("Submit") %>
<% end %>
